generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CONTENT_MANAGER
}

model User {
  id                       String     @id @default(auto()) @map("_id") @db.ObjectId
  email                    String     @unique
  name                     String
  lastname                 String
  password                 String
  role                     Role       @default(CONTENT_MANAGER)
  emailVerified            Boolean    @default(false)
  emailVerificationOTP     String?
  emailVerificationExpires DateTime?
  resetPasswordOTP         String?
  resetPasswordExpires     DateTime?
  createdAt                DateTime   @default(now())
  updatedAt                DateTime   @updatedAt
  createdEvents            Event[]
  createdActivities        Activity[]

  @@map("users")
}

model Activity {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  datetime DateTime
  isAllDay Boolean
  creator  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId

  @@map("activities")
}

model Event {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  datetime  DateTime
  location  String
  completed Boolean      @default(false)
  thumbnail String
  public_id String
  creator   String
  images    EventImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId

  @@map("events")
}

model EventImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  eventId   String   @db.ObjectId
  event     Event    @relation(fields: [eventId], references: [id])
  url       String
  width     Int
  height    Int
  public_id String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("event-images")
}

model Installation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String
  width     Int
  height    Int
  public_id String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("installations")
}
